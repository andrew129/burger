<h1>Burger Restaurant</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<form>
    <textarea name='choice' placeholder='Add a Burger'></textarea>
    <button type='submit'>Add Burger</button>
</form>
